<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ScrollView chứa nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="72dp"> <!-- Padding để tránh bị giỏ hàng che -->

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="16dp">

                <!-- Dòng 1: Avatar + Tên + Notification Icon -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Avatar và tên -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/logo_img"
                            android:contentDescription="Avatar"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Notification Icon (góc trên bên phải) -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Thông báo"
                        android:src="@drawable/bell" />
                </RelativeLayout>

                <!-- Dòng 2: Giao hàng/Đặt đến lấy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_delivery_black"
                            android:contentDescription="Giao hàng"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giao tận nơi"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_pickup_black"
                            android:contentDescription="Đặt đến lấy"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đặt đến lấy"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Dòng 3: Địa chỉ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_addr_black"
                        android:contentDescription="Địa chỉ"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Đường Phạm Như Xương, Hòa Khán..."
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:autoStart="true"
                android:flipInterval="3000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/slide1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/slide2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/slide3"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/slide4"
                    android:scaleType="centerCrop" />

            </ViewFlipper>

            <!-- KHU VỰC COMBO LƯỚT NGANG -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combo Ưu Đãi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="#000000"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="always"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical">

                    <!-- Combo Item 1 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAFAFA"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"
                        android:backgroundTint="#FAFAFA"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Combo 1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Combo 1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99.000đ"
                            android:textColor="#FF5722"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Combo Item 2 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAFAFA"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Combo 2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Combo 2"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="119.000đ"
                            android:textColor="#FF5722"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Combo Item 3 (thêm nhiều cái tương tự nếu muốn) -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAFAFA"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Combo 2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Combo 2"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="119.000đ"
                            android:textColor="#FF5722"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAFAFA"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:elevation="2dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            android:contentDescription="Combo 2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Combo 2"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="119.000đ"
                            android:textColor="#FF5722"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Các phần nội dung khác sau combo -->
            <!-- Ví dụ: danh sách sản phẩm, banner khuyến mãi,... -->
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_pickup_black"
        android:contentDescription="Giỏ hàng"
        android:elevation="8dp"
        app:backgroundTint="#FF5722"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

