<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_success"
        android:contentDescription="THANH TOÁN THÀNH CÔNG"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán thành công!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: #123456"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- ✅ TextView hiển thị số tiền đã thanh toán -->
    <TextView
        android:id="@+id/tv_payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền: 250.000đ"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_view_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem đơn hàng"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_go_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Về trang chính"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"/>
</LinearLayout>
