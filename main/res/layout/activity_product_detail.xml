<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Phần cuộn nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Ảnh sản phẩm với nút back -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_rounded_white"
                    android:clipToOutline="true" />

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/c_arrow_back"
                    android:elevation="4dp" />
            </RelativeLayout>
            <!-- Tên và giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 miếng Gà Sốt Cay"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35,000 đ"
                    android:textColor="#D50000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Mô tả -->
            <TextView
                android:id="@+id/tv_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 miếng Gà Sốt Cay"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Bộ chọn số lượng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#D50000"
                    android:src="@drawable/ic_minus"
                    android:background="@drawable/bg_rounded_red"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"

                    android:background="@drawable/bg_rounded_white" />


                <ImageButton
                    android:id="@+id/btn_increase"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#D50000"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/bg_rounded_red"
                    app:tint="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Phần cố định ở cuối màn hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Tổng cộng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng Cộng:"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35,000 đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D50000" />
        </LinearLayout>

        <!-- Nút -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFA000"
                android:text="Thêm vào giỏ"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_buy_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#D50000"
                android:text="Thanh Toán Ngay"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
